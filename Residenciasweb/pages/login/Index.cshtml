@page
@model Residenciasweb.pages.login.IndexModel
@{
}
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/styles/login.css" rel="stylesheet" />
    <link rel="manifest" href="~/manifest.json" />
    <title>

    </title>
</head>
<body>
    <header>
        <nav>
            <img src="~/img/logo.png" />
        </nav>
    </header>
    <div class="login">
        <form>
            <h2>Iniciar Sesión</h2>

            <label >Numero de Control:</label>
            <input id="numeroDeControl" type="text">

            <label>Contraseña:</label>
            <input id="contrasena" type="password">

            <a id="olvidaste" >¿Olvidaste tu contraseña?</a><br />
            <input type="submit" id="iniciarsesion" value="Iniciar Sesion" /><br />

      


        </form>
    </div>

    <div class="modal">
        <form class="formRecuperarContraseña">

            <h1>Recuperar Contraseña</h1>
            <h3>Introduce tu correo institucional y tu numero de control</h3>
            <input name="numControl" type="text" placeholder="Número de control" style="text-transform:uppercase" maxlength="10" />
            <label class="errores"></label>
            <hr />
            <div>
                <input class="cancelarbtn" type="button" value="Cancelar" />
                <input class="botonrecuperar" type="submit" id="recuperarbtn" value="Recuperar" />
            </div>
            
        </form>
    </div>
    <div class="modal">
        <form class="formMensaje">
           <h1>Recuperar Contraseña</h1>

            <a>Te informamos que su preceso de recuperacion de contraseña a sido exitoso</a>
            <strong>Se le enviara una nueva contraseña a su correo institucional</strong>
            <hr />
            <input class="botonfinalizar" type="submit" value="Finalizar" />
        </form>
    </div>

    <div class="modal">
        <form class="formMensajeFallo">
            <h1>Recuperar Contraseña</h1>

            <a>Te informamos que su preceso de recuperacion de contraseña a Fallado</a>
            <strong>Vuelve a intentarlo o acude con tu coordinador de carrera </strong>
            <hr />
            <input class="botonfinalizar" type="submit" value="Finalizar" />
        </form>
    </div>
    <script src="~/scripts/seguridad.js"></script>
    <script src="~/scripts/login.js"></script>

    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', async () => {
                try {
                    const registration = await navigator.serviceWorker.register('/serviceworker.js');
                    console.log('Service Worker registrado con éxito:', registration);
                } catch (error) {
                    console.error('Error al registrar el Service Worker:', error);
                }
            });
        }
    </script>
</body>
</html>